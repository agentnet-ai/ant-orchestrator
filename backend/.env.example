PORT=5055

# MySQL (optional â€“ backend runs without a database)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ant_orchestrator
DB_USER=root
DB_PASSWORD=

# Set to "true" to auto-sync Sequelize models on startup
ENABLE_DB_SYNC=false

# Set to "true" to persist chat messages to MySQL
ENABLE_DB_PERSIST=false

# Allow "forcefail" query override in production (dev always allows it)
ALLOW_FORCEFAIL=false

# Resolver mode: "mock" (built-in mock) or "http" (two-step ant-resolver)
RESOLVER_MODE=mock
RESOLVER_BASE_URL=http://localhost:5175
RESOLVER_NODE_ENDPOINT=/v1/resolve/node
RESOLVER_ENDPOINT=/v1/resolve/capsules
RESOLVER_TIMEOUT_MS=5000
RESOLVER_API_KEY=
# Required: canonical registrar owner id used for all resolver calls.
# Discover via: curl -s http://localhost:4002/v1/owners/ant-worker
RESOLVER_OWNER_ID=

# Web crawl (ant-capsulizer HTTP API)
CAPSULIZER_BASE_URL=http://localhost:5176
CAPSULIZER_TIMEOUT_MS=6000

# LLM synthesis
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=15000
OPENAI_API_KEY=
